<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SportsTracker.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SportsTracker.MAUI"
    xmlns:local2="clr-namespace:SportsTracker.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="SportsTracker.MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Sports"
        ContentTemplate="{DataTemplate local2:SportView}"
        Route="SportView" />

</Shell>
